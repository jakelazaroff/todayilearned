---
import Search from "astro-pagefind/components/Search";

import Navigation from "../component/Navigation.astro";
import Icon from "../component/Icon.astro";

interface Props {
  slug?: string;
}
---

<div class="wrapper">
  <nav class="nav">
    <a class="title" href="/"> Today I Learned</a>
    <p class="blurb">A collection of useful things I've learned.</p>
    <p class="blurb">By <a href="https://jakelazaroff.com">Jake Lazaroff</a></p>
    <Search id="search" className="pagefind-ui" uiOptions={{ showImages: false }} />
    <Navigation slug={Astro.props.slug} />
    <ul class="footer">
      <li class="footer-item">
        <a class="footer-link" href="https://github.com/jakelazaroff/todayilearned">
          <Icon icon="code" size={12} />
          <span>Source</span>
        </a>
      </li>
      <li class="footer-item">
        <a class="footer-link" href="/rss.xml">
          <Icon icon="rss" size={12} />
          <span>RSS feed</span>
        </a>
      </li>
    </ul>
  </nav>
  <main class="main">
    <slot />
  </main>
</div>

<style>
  .wrapper {
    display: grid;
    grid-template:
      "main" 1fr
      "nav" auto / auto;

    @media (min-width: 960px) {
      height: 100%;
      grid-template: "nav main" auto / minmax(auto, 40ch) 1fr;
    }
  }

  .nav,
  .main {
    padding: 24px 32px;

    @media (min-width: 960px) {
      height: 100%;
      overflow: auto;
    }
  }

  .nav {
    grid-area: nav;
    box-shadow: 1px 0 0 #00000022;
  }

  .main {
    grid-area: main;
    display: grid;
    grid-auto-flow: row;
  }

  .main > :global(:first-child:not([class])) {
    margin: 0;
  }

  .title {
    display: inline-block;
    margin-block-end: 16px;
    font-size: 1.5rem;
    text-decoration: none;
    color: black;
    font-weight: bold;
  }

  :global(#search) {
    margin-block-start: 16px;
  }

  :global(#search:has(.pagefind-ui__results:not(:empty))) + :global(*) {
    display: none;
  }

  .footer {
    margin-top: auto;
    padding-block-start: 48px;
    line-height: 1.25;
    display: flex;
    align-items: center;
  }

  .footer-item:not(:first-child)::before {
    content: "/";
    position: relative;
    top: -3px;
    margin-inline: 24px;
    text-decoration: none;
    color: #00000022;
    font-weight: 900;
  }

  .footer-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .footer-link > :global(:first-child) {
    position: relative;
    top: -1px;
  }
</style>
